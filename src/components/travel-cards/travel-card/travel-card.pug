mixin travel-card(card)
    section.travel-card
        .travel-card__image(style={'background-image': `url(${card.img})`})
            span.travel-card__price= card.price
        h3.travel-card__country= card.country
        h2.travel-card__title= card.title
        if card.route
            p.travel-card__route= card.route
        .travel-card__discrip #{card.days} <em class="travel-card__lang">#{card.lang}</em>
        .travel-card__discrip= card.dates
        if card.special
            .travel-card__special= card.special
        
        